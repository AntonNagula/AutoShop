@model  IEnumerable<магазин_авто.Models.Car>
@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <link type="text/css" rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <div id="cars">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <p><img src="~/Files/@item.ExtencionName" width="300" height="200" alt="@item.Name"></p>
            <p>
                @Html.DisplayFor(modelItem => item.Name)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Price)$
            </p>
            <p>
                @Html.ActionLink("Посмотреть покупателей", "ShowUsers_of_Car", new { id = item.Id })
            </p>
            <p>
                <form method="get" action="/Home/UpdateCar/@item.Id">
                    <input type="submit" value="Обновить данные" />
                </form>
            </p>
            <p>
                <form method="get" action="/Home/Buy/@item.Id">
                    <input type="submit" value="купить" />
                </form>
            </p>
            <p>
                <form method="get" action="/Home/ShowCar/@item.Id">
                    <input type="submit" value="подробнее" />
                </form>
            </p>
        </div>
    }
        </div>
</body>
</html>